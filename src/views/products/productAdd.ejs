<!DOCTYPE html>
<html lang="ES">
<%- include('../partials/head', { title : 'Agregar' }) %>

  <body class="dashboard">
   <%-include('../partials/headerAdmin') %>
        <main class="container">
          <section class="row my-5">
            <div class="col-12 col-md-10 mx-auto">
              <div class="card">
                <div class="card-header d-flex justify-content-between">
                  <nav style="
                  --bs-breadcrumb-divider: url(
                    &#34;data:image/svg + xml,
                    %3Csvgxmlns='http://www.w3.org/2000/svg'width='8'height='8'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='%236c757d'/%3E%3C/svg%3E&#34;
                  );
                " aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="/admin" class="text-primary">Inicio</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Nuevos: "Productos"
                      </li>
                    </ol>
                  </nav>
                </div>
                <div class="card-body">
                  <form id="productAddForm" action="/products/crear" method="POST" enctype="multipart/form-data" class="row">
                    <h3>Nuevo: "Producto"</h3>
                    <hr />
                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.nombre ? 'is-invalid' : locals.old && old.nombre ? 'is-valid' : '' %>"
                          type="text" name="nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>" />
                        <label for="nombre">Nombre</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.nombre ? errors.nombre.msg : null %>
                      </small>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <select name="categoria" class="form-select" id="categoria"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% categorias.forEach(categorie=> { %>
                            <option value="<%= categorie.id %>">
                              <%= categorie.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="categoria">Categoria</label>

                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.categoria ? errors.categoria.msg : null %>
                      </small>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <select name="section" class="form-select" id="section"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% sections.forEach(section=> { %>
                            <option value="<%= section.id %>">
                              <%= section.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="section">Sección</label>

                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.section ? errors.section.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 col-md-6 mb-3">

                      <div class="form-floating">
                        <select name="marca" class="form-select" id="marca" aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% marcas.forEach(marca=> { %>
                            <option value="<%= marca.id %>">
                              <%= marca.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="marcas">Marca</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.marca ? errors.marca.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 col-md-6 mb-3">

                      <div class="form-floating">
                        <select name="color" class="form-select" id="color"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% colores.forEach(color=> { %>
                            <option value="<%= color.id %>">
                              <%= color.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="color">Color</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.color ? errors.color.msg : null %>
                      </small>
                    </div>
               



                    <div class="col-6 col-md-3 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.precio ? ' is-invalid' : locals.old && old.precio ? 'is-valid' : '' %>"
                          type="text" name="precio" value="<%= locals.old && old.precio ? old.precio : null %>" />

                        <label for="precio">Precio</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.precio ? errors.precio.msg : null %>
                      </small>
                    </div>

                    <div class="col-6 col-md-3 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.descuento ? ' is-invalid' : locals.old && old.descuento ? 'is-valid' : '' %>"
                          type="text" name="descuento"
                          value="<%= locals.old && old.descuento ? old.descuento : 0 %>" />

                        <label for="descuento">Descuento</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.descuento ? errors.descuento.msg : null %>
                      </small>
                    </div>
                    <div class="col-12 mb-3">
                      <div class="form-floating">
                        <textarea name="descripcion" class="form-control" id="descripcion"
                          style="height: 150px"></textarea>

                        <label for="descripcion">Descripción</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.descripcion ? errors.descripcion.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 mb-3">
                      <label class="form-label">Talles</label>
                      <small class="text-danger">
                        <%=locals.errors && errors.talles ? errors.talles.msg : null %>
                       </small>

                      <div class="d-flex">
                        <% talles.forEach(t => { %>
                          <div class="form-check" >
                            <input class="form-check-input-lg" name="talles" type="checkbox" value="<%= t.id %>" id="<%= t.id + t.name %>">
                            <label class="form-check-label" for="<%= t.id + t.name %>">
                              <%= t.name %>
                            </label>
                          </div>
                        <% }) %>
                      
                      </div> 
                                           
                    </div>
                    <div class="col-12 mb-3 p-4">
                      <label for="" class="form-label">Imágenes:</label>
  
                      <div class="row border rounded p-3">
                        <% for(let i = 0; i < 4; i++) { %>
                        <div class="col-12 col-md-6 col-lg-3 d-flex align-items-center justify-content-center " style="height: 250px">
                        
                            <div class="d-flex justify-content-center border align-items-center position-relative" id="div<%= i %>" style="height: 250px; width: 200px;">
                              <button type="button" class="btn btn-sm btn-danger position-absolute bottom-0 start-0" onclick="removeImagePrev('<%=i%>')" id="button<%= i %>" hidden><i class="fa-solid fa-trash-can"></i></button>
                              <input type="file" hidden id="image<%= i %>" onchange="showImagePrev(event, '<%=i%>')" name="images"/>
                              <label for="image<%= i %>" id="label<%= i %>" class="btn btn-sm btn-dark position-absolute bottom-0 end-0"><i class="fa-solid fa-plus"></i> Agregar</label>
                            </div>
                        
                        </div>
                          <% } %>
                      </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end">

                   
                      <button type="submit" class="btn btn-lg btn-primary">
                        Guardar
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </section>
        </main>
        <script src="/js/productAdd.js"></script>
  </body>

</html>