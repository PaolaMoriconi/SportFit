<header class="header">
  <nav class="header__nav">
    <div class="icon--sportfit">
      <a href="/"> <img src="/images/logo-6.png" alt="logoSportFIt" /></a>
    </div>

    <ul class="header__nav--left">
      <li class="burguer-menu">
        <a href="#"><i class="fa-solid fa-bars"></i></a>
      </li>
      <li class="icon">
        <a href="#"><i class="fa-solid fa-search"></i></a>
      </li>
      <form action="/search" method="GET">
        <div class="home__main__header--search">
          <input
            class="home__main__input"
            type="text"
            placeholder="Buscar"
            name="keyword"
          />
          <button type="submit"><i class="fa-solid fa-search"></i></button>
        </div>
      </form>
    </ul>

    <ul class="header__nav--right">
      
      <% if(locals.user) { %>

                <li class="nav-item dropdown">
                  <button class="btn btn-transparent dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= user.name %>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-dark">
                    <li><a class="dropdown-item"  href="/users/perfil/<%= user.id %>">Mi perfil</a></li>
                    <% if (locals.user && user.rol == "admin") { %>
                  
                      <li><a class="dropdown-item" href="/admin">Dashboard</a></li>

                    <% } %>
                    <% if (locals.user && user.rol == "user") { %>
                        <li><a class="dropdown-item" href="/cart">Carrito</a></li>
                    <% } %>

                    <li><a class="dropdown-item"  href="/users/logout">Cerrar sesión</a></li>
                  </ul>
                </li>
    
     
      

      <%}else{%>
      <li>
        <a href="/users/login"><i class="fa-solid fa-user"></i></a>
      </li>
      <% } %>
    </ul>

    <nav class="header__nav--categoria">
      <ul id="ul__header" class="header__nav__ul--categoria">
        <li><a href="/products">Productos</a></li>
        <li><a href="/products?categorie=1">Hombre</a></li>
        <li><a href="/products?categorie=2">Mujer</a></li>
        <li><a href="/products?categorie=3">Niños</a></li>
        <li><a href="/products?categorie=4">Accesorios</a></li>
        <% if (locals.user && user.role === 1) { %>
        <li><a href="/admin">Dashboard</a></li>
        <% } %>
      </ul>
    </nav>
  </nav>
</header>
<script src="/js/header.js"></script>
